{
  "name": "rag-inventory-assistant",
  "displayName": "Zeroui Ai Agent",
  "description": "Retrieval-Augmented Generation agent for inventory management queries",
  "version": "1.0.0",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:rag.openPanel"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "rag.openPanel",
        "title": "Open RAG Agent",
        "category": "RAG Agent"
      },
      {
        "command": "rag.closePanel",
        "title": "Close RAG Agent",
        "category": "RAG Agent"
      },
      {
        "command": "rag.clearCache",
        "title": "Clear Cache",
        "category": "RAG Agent"
      },
      {
        "command": "rag.refreshCacheStats",
        "title": "Refresh Cache Statistics",
        "category": "RAG Agent"
      },
      {
        "command": "rag.showStatus",
        "title": "Show Status",
        "category": "RAG Agent"
      },
      {
        "command": "rag.showOutput",
        "title": "Show Output",
        "category": "RAG Agent"
      },
      {
        "command": "rag.showProblems",
        "title": "Show Problems",
        "category": "RAG Agent"
      },
      {
        "command": "rag.openSettings",
        "title": "Open Settings",
        "category": "RAG Agent"
      },
      {
        "command": "rag.showErrorLog",
        "title": "Show Error Log",
        "category": "RAG Agent"
      },
      {
        "command": "rag.clearErrorLog",
        "title": "Clear Error Log",
        "category": "RAG Agent"
      },
      {
        "command": "rag.indexCodebase",
        "title": "Index Entire Codebase",
        "category": "RAG Agent"
      },
      {
        "command": "rag.analyzeCodebaseComprehensive",
        "title": "Comprehensive Codebase Analysis",
        "category": "RAG Agent"
      }
    ],
    "configuration": {
      "title": "RAG Agent",
      "properties": {
        "ragAgent.ollamaUrl": {
          "type": "string",
          "default": "http://localhost:11434",
          "description": "Ollama server URL (default: http://localhost:11434)",
          "scope": "application"
        },
        "ragAgent.model": {
          "type": "string",
          "default": "qwen2.5:3b",
          "enum": [
            "tinyllama",
            "phi3:mini-128k",
            "phi-2",
            "llama3",
            "qwen2.5:3b",
            "qwen2.5-coder",
            "qwen2.5-coder:3b",
            "deepseek-r1:7b",
            "llama2",
            "mistral",
            "codellama"
          ],
          "description": "Ollama model to use for generation (qwen2.5:3b recommended for accuracy and speed)",
          "scope": "application"
        },
        "ragAgent.googleApiKey": {
          "type": "string",
          "default": "",
          "description": "Google Custom Search API key (kept local; not sent to UI)",
          "scope": "application"
        },
        "ragAgent.googleCseId": {
          "type": "string",
          "default": "",
          "description": "Google Custom Search Engine ID (cx)",
          "scope": "application"
        },
        "ragAgent.enableWebSearch": {
          "type": "boolean",
          "default": false,
          "description": "Enable Google web search in retrieval pipeline",
          "scope": "application"
        },
        "ragAgent.cacheSize": {
          "type": "number",
          "default": 500,
          "description": "Maximum cache entries",
          "scope": "application"
        },
        "ragAgent.cacheTTL": {
          "type": "number",
          "default": 300,
          "description": "Cache TTL in seconds",
          "scope": "application"
        },
        "ragAgent.topK": {
          "type": "number",
          "default": 5,
          "description": "Number of documents to retrieve",
          "scope": "application"
        },
        "ragAgent.knowledgeSources": {
          "type": "array",
          "default": [],
          "items": {
            "type": "string"
          },
          "description": "Paths to knowledge files or directories (JSON format) to load into RAG agent. Format: Array of { id, content, metadata, timestamp? } objects.",
          "scope": "application"
        },
        "ragAgent.similarityThreshold": {
          "type": "number",
          "default": 0.7,
          "minimum": 0,
          "maximum": 1,
          "description": "Similarity threshold for retrieval",
          "scope": "application"
        },
        "ragAgent.theme": {
          "type": "string",
          "default": "auto",
          "enum": [
            "auto",
            "light",
            "dark"
          ],
          "description": "Theme preference (auto follows IDE theme)",
          "scope": "application"
        },
        "ragAgent.useZerouiBackend": {
          "type": "boolean",
          "default": false,
          "description": "Use Zeroui FastAPI backend instead of direct Ollama connection",
          "scope": "application"
        },
        "ragAgent.gatewayTimeout": {
          "type": "number",
          "default": 180000,
          "description": "Model gateway timeout in milliseconds (180s/3min default for large models like phi3:mini-128k)",
          "scope": "application"
        },
        "ragAgent.gatewayMaxRetries": {
          "type": "number",
          "default": 3,
          "description": "Maximum number of retries for model gateway requests",
          "scope": "application"
        },
        "ragAgent.gatewayRetryDelay": {
          "type": "number",
          "default": 1000,
          "description": "Initial retry delay in milliseconds (exponential backoff)",
          "scope": "application"
        },
        "ragAgent.gatewayRateLimitMaxRequests": {
          "type": "number",
          "default": 10,
          "description": "Maximum number of requests allowed in the rate limit window",
          "scope": "application"
        },
        "ragAgent.gatewayRateLimitWindow": {
          "type": "number",
          "default": 60000,
          "description": "Rate limit window in milliseconds",
          "scope": "application"
        },
        "ragAgent.zerouiEndpoint": {
          "type": "string",
          "default": "http://localhost:8001",
          "description": "FastAPI server endpoint URL (handles Ollama communication). Set FASTAPI_PORT env var to customize.",
          "scope": "application"
        },
        "ragAgent.zerouiModel": {
          "type": "string",
          "default": "phi3:mini-128k",
          "description": "Ollama model name used by Zeroui backend.",
          "scope": "application"
        },
        "ragAgent.zerouiContextMaxFiles": {
          "type": "number",
          "default": 10,
          "description": "Maximum number of files to include in Zeroui context ingestion.",
          "scope": "application"
        },
        "ragAgent.zerouiAutoStartServers": {
          "type": "boolean",
          "default": false,
          "description": "Automatically start FastAPI and Ollama servers on extension activation.",
          "scope": "application"
        },
        "ragAgent.emailRecipient": {
          "type": "string",
          "default": "jafarsadiqe.2001@gmail.com",
          "description": "Email address to receive emails from RAG Agent",
          "scope": "application"
        },
        "ragAgent.emailSmtpHost": {
          "type": "string",
          "default": "smtp.gmail.com",
          "description": "SMTP server host (default: smtp.gmail.com for Gmail)",
          "scope": "application"
        },
        "ragAgent.emailSmtpPort": {
          "type": "number",
          "default": 587,
          "description": "SMTP server port (587 for TLS, 465 for SSL)",
          "scope": "application"
        },
        "ragAgent.emailSmtpUser": {
          "type": "string",
          "default": "",
          "description": "SMTP username (your Gmail address)",
          "scope": "application"
        },
        "ragAgent.emailSmtpPassword": {
          "type": "string",
          "default": "",
          "description": "SMTP password (Gmail App Password, not regular password)",
          "scope": "application"
        },
        "ragAgent.emailFrom": {
          "type": "string",
          "default": "",
          "description": "Email address to send from (usually same as SMTP user)",
          "scope": "application"
        },
        "ragAgent.logHelperEnabled": {
          "type": "boolean",
          "default": false,
          "description": "Enable Log Helper (Pattern Agent from ai-log-helper-gui). Requires FastAPI with /api/log-helper routes.",
          "scope": "application"
        },
        "ragAgent.logHelperUrl": {
          "type": "string",
          "default": "http://localhost:8001",
          "description": "Base URL for Log Helper API (FastAPI server with /api/log-helper/*).",
          "scope": "application"
        },
        "ragAgent.logHelperSourcePath": {
          "type": "string",
          "default": "",
          "description": "Path to ai-log-helper-gui src folder (optional, auto-detected if empty). Example: C:/Users/user/Desktop/ai-log-helper-gui/src",
          "scope": "application"
        },
        "ragAgent.codebaseAutoIndex": {
          "type": "boolean",
          "default": true,
          "description": "Automatically index entire codebase for comprehensive querying",
          "scope": "application"
        },
        "ragAgent.codebaseIndexMaxFiles": {
          "type": "number",
          "default": 1000,
          "description": "Maximum number of files to index from codebase",
          "scope": "application"
        },
        "ragAgent.codebaseIndexMaxSizeBytes": {
          "type": "number",
          "default": 2000000,
          "description": "Maximum file size in bytes to index (2MB default)",
          "scope": "application"
        },
        "ragAgent.codebaseIndexLanguages": {
          "type": "array",
          "default": ["typescript", "javascript", "python", "java", "go", "rust", "cpp", "c", "csharp"],
          "items": {
            "type": "string"
          },
          "description": "File extensions to index (without dot)",
          "scope": "application"
        },
        "ragAgent.codebaseIndexDepth": {
          "type": "string",
          "enum": ["shallow", "medium", "deep"],
          "default": "deep",
          "description": "Indexing depth: shallow (files only), medium (files + functions), deep (files + functions + classes + interfaces + chunks)",
          "scope": "application"
        },
        "ragAgent.codebaseGuaranteedInfo": {
          "type": "boolean",
          "default": true,
          "description": "Always return codebase information (use fallbacks if needed)",
          "scope": "application"
        }
      }
    }
  },
  "dependencies": {
    "nodemailer": "^7.0.12"
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./ && npm run copy-media",
    "copy-media": "node scripts/copy-media.js",
    "watch": "tsc -watch -p ./",
    "test": "jest --runInBand --detectOpenHandles --forceExit",
    "test:watch": "jest --watch"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "^16.18.126",
    "@types/node-fetch": "^2.6.4",
    "@types/nodemailer": "^7.0.4",
    "@types/vscode": "^1.74.0",
    "jest": "^29.7.0",
    "node-fetch": "^2.6.12",
    "ts-jest": "^29.1.1",
    "typescript": "^4.9.5",
    "vscode": "^1.1.34"
  }
}
